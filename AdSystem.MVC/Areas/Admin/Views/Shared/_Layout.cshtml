<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>بخش مدیریت سایت املاک | @ViewBag.Title</title>
    <link href="/Content/bootstrap-rtl.css" rel="stylesheet" />
    <link href="/Content/bootstrap-theme-rtl.css" rel="stylesheet" />
    <link href="/Content/custom.css" rel="stylesheet" />
</head>
<body>
    <header class="container-fluid" id="menu-wrapper">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="/images/logo.gif" alt="لوگوی کهکشان" />
                    </a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index","Home", new { Area = "Admin" })">داشبورد</a></li>
                        <li><a href="@Url.Action("Index","Categories",new { Area = "Admin" })">مدیریت دسته بندی ها</a></li>
                        <li><a href="@Url.Action("Index", "Ads",new { Area = "Admin" })">مدیریت آگهی</a></li>

                    </ul>
                    <ul class="nav navbar-nav navbar-left">
                        <li><a href="/LoginRegister.html">ثبت نام/ورود</a></li>
                        <li><a href="#">پیام پیامی</a></li>
                        <li>
                            <a href="#">
                                <span class="fa fa-power-off"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <section class="container main-wrapper">
        @if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
        {
            <div class="alert alert-@(TempData["MessageClass"] ?? "success")">
                @TempData["Message"]
            </div>
        }
        @RenderBody()
    </section>

    <div class="loader" style="display: none;">
        <img src="/images/ajax-loader.gif" />
    </div>
    <script src="/Scripts/jquery-1.12.4.js"></script>
    <script src="/Scripts/bootstrap-rtl.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>